<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Modern HealthWhisper Theme -->
    <style name="Base.Theme.HabitWhisper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand Colors -->
        <item name="colorPrimary">@color/primary_brand</item>
        <item name="colorPrimaryVariant">@color/primary_brand_dark</item>
        <item name="colorOnPrimary">@color/text_inverse</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/voice_primary</item>
        <item name="colorSecondaryVariant">@color/voice_accent</item>
        <item name="colorOnSecondary">@color/text_inverse</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_secondary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_brand</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Window Properties -->
        <item name="android:windowBackground">@color/background_secondary</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="Theme.HabitWhisper" parent="Base.Theme.HabitWhisper" />
    
    <!-- Modern Button Styles -->
    <style name="ModernButton.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_brand</item>
        <item name="android:textColor">@color/text_inverse</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <style name="ModernButton.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_brand</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary_brand</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <!-- Modern Card Style -->
    <style name="ModernCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/background_primary</item>
        <item name="contentPadding">20dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="ModernText.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">28sp</item>
    </style>
    
    <style name="ModernText.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="ModernText.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <!-- Window Animation -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>